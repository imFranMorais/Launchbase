{% extends "desafio3-1_layout.njk" %}

{% block head %}
    <title>Conteúdos | Rocketseat</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock %}

{% block content %}

    <div id="wrapper">
        <h1>Conteúdos</h1>
    </div>

    <section class="cards">
        <div class="card" id="starter">
            <div class="card__image-container">
                <img src="https://app.rocketseat.com.br/static/media/Starter.64c237cc.svg" alt="Starter">
            </div>
            <div class="card__content">
                <p>Starter | Rocketseat</p>
            </div>
            <div class="card__info">
                <p>5 módulos</p>
                <p class="card__price">Gratuito</p>
            </div>
        </div>

        <div class="card" id="launchbase">
            <div class="card__image-container">
                <img src="https://app.rocketseat.com.br/static/media/LaunchBase.08285320.svg"
                    alt="Launchbase">
            </div>
            <div class="card__content">
                <p>Launchbase | Rocketseat</p>
            </div>
            <div class="card__info">
                <p>8 semanas</p>
                <p class="card__price">Pago</p>
            </div>
        </div>

        <div class="card" id="gostack">
            <div class="card__image-container">
                <img src="https://app.rocketseat.com.br/static/media/GoStack.83a178a0.svg" alt="GoStack">
            </div>
            <div class="card__content">
                <p>GoStack | Rocketseat</p>
            </div>
            <div class="card__info">
                <p>8 semanas</p>
                <p class="card__price">Pago</p>
            </div>
        </div>
    </section>


    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>
            <a class="maximize-modal">
                <i class="material-icons">maximize</i>
            </a>

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>

            </div>

        </div>
    </div>

    <script src="scripts.js"></script>

{% endblock %}