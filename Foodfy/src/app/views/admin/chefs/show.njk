{% extends "admin/layout.njk" %}

{% block content %}

    <div id="chef_title">
        <h2>Chef:
            {{chef.name}}</h2>
        <a href="/admin/chefs/{{chef.id}}/edit" class="button">Editar chef</a>
    </div>

    <div id="chef_image">
        <img src="{{chef.avatar_url}}" alt="">
    </div>

    <div id="chef_name">
        <h1>{{chef.name}}</h1>
        <p>{{chef.total_recipes}} receitas</p>
    </div>

    <div class="wrapper">
        <h2>Receitas</h2>
    </div>

    <section class="cards_recipes">
        {% for recipe in recipes %}
            <div class="card_recipe">
                <div class="card_recipe__image-container">
                    <img src="{{recipe.image}}" alt="Imagem de {{recipe.name}}">
                </div>
                <div class="card_recipe__content">
                    <p>{{recipe.name}}</p>
                    <span>por
                        {{recipe.chef}}</span>
                    <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </section>

{% endblock content %}