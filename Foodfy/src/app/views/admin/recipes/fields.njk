            <div class="item">
                <div>Imagem da receita</div>
                {# <div>
                    <input 
                        type="url" 
                        name="image" 
                        placeholder="http://"
                        value="{{ recipe.image }}"
                    >
                </div> #}

            </div>

            <div class="item">
                <div>Chef</div>
                <div>
                    <select name="chef">
                        <option value="" disabled selected>Selecione um chef</option>
                        {% for chef in chefOptions %}
                        <option value="{{chef.id}}"
                            {% if recipe.chef_id == chef.id %}selected{%endif%}>
                                {{chef.name}}
                        </option>
                        {% endfor %}
                    </select>
                    {# inserir placeholder="Selecione um chef" #}
                </div>
            </div>

            <div class="item">
                <div>Nome da receita</div>
                <div>
                    <input 
                        type="text" 
                        name="name" 
                        value="{{ recipe.name }}"
                    >
                </div>
            </div>

            <div class="item">
                <div>Ingredientes</div>
                <div id="ingredients">
                {% if recipe.ingredients.length > 0 %}
                    {% for ingredient in recipe.ingredients %}
                        <div class="ingredient">
                            <input  type="text" name="ingredients[]" value="{{ ingredient }}">
                        </div>
                    {% endfor %}
                {% else %}
                        <div class="ingredient">
                            <input  type="text" name="ingredients[]">
                        </div>
                {% endif %}
                </div>
                <button type="button" class="add-input" name="ingredient">Adicionar novo ingrediente</button>
            </div>
            

            <div class="item">
                <div>Modo de preparo</div>
                <div id="preparation">
                {% if recipe.preparation.length > 0 %}
                    {% for step in recipe.preparation %}
                    <div class="step">
                        <input 
                            type="text" 
                            name="preparation[]"
                            value="{{ step }}"
                        >
                    </div>
                {% endfor %}
                {% else %}
                <div class="step">
                        <input 
                            type="text" 
                            name="preparation[]"
                        >
                    </div>
                {% endif    %}
                </div>
                <button type="button" class="add-input" name="step">Adicionar novo passo</button>
            </div>

            <div class="item">
                <div>Informações adicionais</div>
                <div id="information">
                    <textarea name="information">{{ recipe.information }}</textarea>
                </div>
            </div>

    <script src="/scripts.js"></script>
