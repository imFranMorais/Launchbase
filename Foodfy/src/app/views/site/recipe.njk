{% extends "site/layout.njk" %}

{% block head %}
    <title>Foodfy |{{recipe.name}}</title>
{% endblock %}

{% block logoText %}
    <div class="logo-text">
        <a href="/">Foodfy</a>
    </div>
{% endblock %}

{% block content %}

    <div id="recipe_title">
        <h2>Receita:
            {{recipe.name}}</h2>
    </div>

    <div id="recipe_image">
        <img src="{{recipe.image}}" alt="">
    </div>

    <div id="recipe_name">
        <h1>{{recipe.name}}</h1>
        <p>por
            {{recipe.chef}}</p>
    </div>

    <section class="recipe">

        <div class="topic">
            <div class="title">
                <h2>Ingredientes</h2>
            </div>
            <div class="content">
                <ul>
                    {% for ingredient in recipe.ingredients %}
                        <li>{{ ingredient }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="topic">
            <div class="title">
                <h2>Modo de Preparo</h2>
            </div>
            <div class="content">
                <ul>
                    {% for preparation in recipe.preparation %}

                        <p>{{preparation}}</p>

                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="topic">
            <div class="title">
                <h2>Informações adicionais</h2>
            </div>
            <div class="content">
                <p>{{recipe.information | nl2br}}</p>
            </div>
        </div>

    </section>

{% endblock %}