{% extends "admin/layout.njk" %}

{% block content %}

    <div id="chef-name">
        <h2>Chef: {{chef.name}}</h2>
        <a href="/chefs/{{chef.id}}/edit" class="button">Editar chef</a>
    </div>

    <div id="chef_image">
        <img src="{{chef.avatar_url}}" alt="">
    </div>

    <div id="chef_name">
        <h1>{{chef.name}}</h1>
        <p>AQUI DEVE APARECER O NUMERO DE RECEITAS</p>
    </div>

    <div class="wrapper">
        <h2>Receitas</h2>
    </div>

    <section class="cards">
        {% for recipe in recipes %}
            <div class="card">
                <div class="card__image-container">
                    <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
                </div>
                <div class="card__content">
                    <p>{{recipe.title}}</p>
                    <span>por {{recipe.name}}</span>
                    <a href="/recipes/{{recipe.id}}">Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </section>

{% endblock content %}