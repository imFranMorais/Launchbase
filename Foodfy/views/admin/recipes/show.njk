{% extends "admin/layout.njk" %}

{% block content %}

    <div id="recipe-title">
        <h2>Receita: {{recipe.title}}</h2>
        <a href="/recipes/{{recipe.id}}/edit" class="button">Editar receita</a>
    </div>
    
    <div id="recipe_image">
        <img src="{{recipe.image}}" alt="">
    </div>

    <div id="recipe_title">
        <h1>{{recipe.title}}</h1>
        <p>por {{recipe.name}}</p>
    </div>

    <section class="recipe">

        <div class="topic">
            <div class="title">
                <h2>Ingredientes</h2>
            </div>
            <div class="content">
                <ul>
                    {% for ingredient in recipe.ingredients %}
                        <li>{{ ingredient }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="topic">
            <div class="title">
                <h2>Modo de Preparo</h2>
            </div>
            <div class="content">
                <ul>
                    {% for preparation in recipe.preparation %}

                        <p>{{preparation}}</p>

                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="topic">
            <div class="title">
                <h2>Informações adicionais</h2>
            </div>
            <div class="content">
                <p>{{recipe.information | nl2br}}</p>
            </div>
        </div>

    </section>

{% endblock content %}